!***********************************************************************
!   This is an example of CtrFile for GROWTH_CLUSTER, a program adapted from GMD
!   to simulate growth of cluster generic MD.
!   Each line strating with chracter ! will be explained as a comment 
!   line(just like this line). 
!
!   SEE ALSO (in DOC directories):
!       CtrlFile_GMD.readme     - for more general description
!       
!***********************************************************************
!
!   SEE ALSO: SampleSetup.dat in the same directory
!             CtrlFile500K.dat

&CTLF_GMD

  &COMMSUBCTL
     &RANDSEED random number seed  = 123456
     &BOXS     box in one test = 10, total num = 10, independent = 1
   &ENDSUBCTL

  &POTENSUBCTL   
     &CUTOFF      cutoff distances: A-A= 1.9, A-B= 1.9, B-A= 1.9, B-B= 1.9
     &TABLESIZE   10000, output force table= "NO" 
  &ENDSUBCTL      
  
  &SECTSUBCTL  #1 ---------------------
   &TEMPSUBCTL 
      &TEMPERATURE    temperature of the system= 300
      &THERMALIZATION number of thermalizing= 0, for evry steps 50, method = "MC"
      &QUICKDAMP      number of step for quick dumpping = 2000, method =  "DYN", "LBFGS", 
   &ENDSUBCTL   
   
   &TIMESUBCTL
     &TERMINATE  terminate simulation for steps = 2000
     &STEPSIZE   use fixd step flag= -1, hmi= 0.5, hmx = 0.5, dmx = 0.01 
     &OUTPUT_T   output thermal quantities for every 500  time step   
     &OUTPUT_C   output instant configure for every  1000 time step, "S" (in seperated files)   
     &SAVE       output instant configure for every  1000 time step   
   &ENDSUBCTL    
   
   &BOUNDSUBCTL   
    &PERIDIC  periodic conditions X= 1, Y= 1, Z= 1
   &ENDSUBCTL
       
   &NEIGHBSUBCTL   
     &MAXNB     maxmun number of neighbore for an atom= 256
     &UPDATEFRE minimun frequcency= 10, max frequence= 10, frequecy of changing updating frequency 100
     &CUTOFF    cutoff between neighbors = 1.2
   &ENDSUBCTL
  &ENDSUBCTL end section #1  ---------------------   
  
  &SECTSUBCTL  #2 ---------------------
   &TEMPSUBCTL 
      &TEMPERATURE    temperature of the system= 500
      &THERMALIZATION number of thermalizing= 100, for evry steps 50, method = "MC"
      &QUICKDAMP      number of step for quick dumpping = 0, method =  "DYN", "LBFGS", 
   &ENDSUBCTL   
   
   &TIMESUBCTL
     &TERMINATE  terminate simulation for steps = 6000
     &STEPSIZE   use fixd step flag= 0, hmi= 0.5, hmx = 0.5, dmx = 0.01 
     &OUTPUT_T   output thermal quantities for every 1000   time step   
     &OUTPUT_C   output instant configure for every  3000 time step   
     &SAVE       output instant configure for every  3000 time step   
   &ENDSUBCTL    
  &ENDSUBCTL end section #2  ---------------------   

  &SECTSUBCTL  #3 ---------------------
   &TEMPSUBCTL 
      &TEMPERATURE    temperature of the system= 500
      &THERMALIZATION number of thermalizing= 0, for evry steps 50, method = "MC"
   &ENDSUBCTL   
   
   &TIMESUBCTL
     &TERMINATE  terminate simulation for steps = 200000
     &STEPSIZE   use fixd step flag= 0, hmi= 0.5, hmx = 0.5, dmx = 0.01 
     &OUTPUT_T   output thermal quantities for every 1000 time step   
     &OUTPUT_C   output instant configure for every  5000 time step   
     &SAVE       output instant configure for every  5000 time step   
   &ENDSUBCTL    
  &ENDSUBCTL end section #3  ---------------------  
  

  &ANALYSUBCTL
   &NEWATOMS  the number of added atom 1, with type 2
  &ENDSUBCTL
&ENDCTLF


  
